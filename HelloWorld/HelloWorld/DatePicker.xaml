<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.DatePicker">
    <ContentPage.Content>
        <StackLayout>
            <DatePicker Date="{x:Static sys:DateTime.Today}" Format="dd MM yyy" />
            <TimePicker Time="12:45"/>
          <Button Text="Next" TextColor="Blue" Clicked="Button_OnClicked"></Button>
            <Button Text="Back" TextColor="Black" Clicked="Button_OnClicked1"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>