<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.Stacklayout"
             NavigationPage.HasBackButton="False"
             Title="StackLayOutPage">
    <ContentPage.Content>
        <StackLayout Padding="20" Spacing="20" VerticalOptions="Center" BackgroundColor="Green"  HorizontalOptions="Center">
            <Label Text="Label 1" TextColor="White" BackgroundColor="Blue"></Label>
            <Label Text="Label 2" TextColor="White" BackgroundColor="Blue"></Label>
            <Label Text="Label 3" TextColor="White" BackgroundColor="Blue"></Label>
            
            <Button Text="Next" TextColor="Blue" Clicked="Button_Clicked"></Button>
            <Button Text="Back" TextColor="Black" Clicked="Button_Clicked_2"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>