<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HelloWorld.Picker">
    <ContentPage.Content>
        <StackLayout  >
            <Picker x:Name="Contactmethod" Title="Contact Method" SelectedIndexChanged="Picker_SelectedIndexChanged"  BackgroundColor="Blue">
                <Picker.Items>
                    <x:String> Email</x:String>
                    <x:String> Sms </x:String>
                </Picker.Items>
            </Picker>
            <Button Text="Next" TextColor="Blue" Clicked="Button_OnClicked"></Button>
            <Button Text="Back" TextColor="Black" Clicked="Button_OnClicked1"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>